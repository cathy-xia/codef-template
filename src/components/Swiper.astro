<div class="swiper-container">
  <div class="swiper-wrapper">
    <div class="swiper-slide" id="slide-1">Slide 1: iteration 0</div>
    <div class="swiper-slide" id="slide-2">Slide 2</div>
    <div class="swiper-slide" id="slide-3">Slide 3</div>
  </div>
</div>;

<script src="https://unpkg.com/swiper/swiper-bundle.js"></script>

    <!-- Initialize Swiper -->
    <script>
      new Swiper(".swiper-container");

      const slide1El = document.getElementById("slide-1");
      const slide2El = document.getElementById("slide-2");
      const slide3El = document.getElementById("slide-3");

      let iteration = 0;

      setInterval(() => {
        iteration++;
        slide1El.innerHTML = `Slide 1: iteration ${iteration}`;
      }, 1000);
    </script>
    
    
    